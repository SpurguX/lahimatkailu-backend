doctype html
html(lang="en")
    include includes/head.pug
    body
        include includes/nav.pug
        div#locale(style="display:none", name=locale)
            p.sight
                | #{ __('Sight')}
            p.service
                | #{ __('Service')}
            p.food
                | #{ __('Food')}

        .modal.fade-scale#deleteModal(tabindex="-1" role="dialog")
            .modal-dialog(role="document")
                .modal-content
                    .modal-header
                        h5.modal-title #{ __('Delete')}
                            button.close(type="button" data-dismiss="modal" aria-label="Close")
                                span(aria-hidden="true") Ã—
                    .modal-body
                        p #{ __('Are you sure you want to delete')}
                            span.destinationName
                    .modal-footer
                        button.btn.btn-danger.deleteConfirm(type="button") #{ __('Delete')}
                        button.btn.btn-secondary(type="button" data-dismiss="modal") #{ __('Cancel')}

        .container(style="margin-top:-15px; margin-bottom:50px")
            h2 #{ __('List')}
            
            div.typeFilterContent
                | #{ __('Filter by type:')} 
                label.checkbox-inline(for="all")
                    a.all.btn.btn-primary.btn-sm(style="margin-left:-20px") #{ __('All')}
                    input#all.checkbox-inline.resetFilters(style="display:none;" checked="" onchange="resetFilters()", type="checkbox", name="type", value=filterAll)
                label.checkbox-inline(for="sight")
                    a.type.btn.btn-sm(style="margin-left:-20px") #{ __('Sight')}
                    input#sight.checkbox-inline.filter(style="display:none" onchange="filterType(this)", type="checkbox", name="type", value=filterSight)
                label.checkbox-inline(for="food")
                    a.type.btn.btn-sm(style="margin-left:-20px") #{ __('Food')}
                    input#food.checkbox-inline.filter(style="display:none" onchange="filterType(this)", type="checkbox", name="type", value=filterFood)
                label.checkbox-inline(for="service") 
                    a.type.btn.btn-sm(style="margin-left:-20px") #{ __('Service')}
                    input#service.checkbox-inline.filter(style="display:none" onchange="filterType(this)", type="checkbox", name="type", value=filterService)

            table.table.table-striped.table-bordered
                thead
                    tr
                        th #
                        th #{ __('Name')}
                        th #{ __('Address')}
                        th #{ __('City')}
                        th #{ __('Type')}
                        th #{ __('Modify')}
                        th #{ __('Delete')}
        script(src="/js/list.js")
        script(src="/js/delete.js")
