doctype html
html(lang="en")
    head
        title= title
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
        link(rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs-3.3.7/dt-1.10.16/datatables.min.css")
        script(type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/dt-1.10.16/datatables.min.js")
    body
        .modal#deleteModal(tabindex="-1" role="dialog")
            .modal-dialog(role="document")
                .modal-content
                    .modal-header
                        h5.modal-title Delete
                            button.close(type="button" data-dismiss="modal" aria-label="Close")
                                span(aria-hidden="true") ×
                    .modal-body
                        p Are you sure you want to delete
                            span.destinationName
                    .modal-footer
                        button.btn.btn-danger.deleteConfirm.redirect(type="button") Delete
                        button.btn.btn-secondary(type="button" data-dismiss="modal") Cancel

        nav.navbar.navbar-default
            .container-fluid
                .navbar-header
                    a.navbar-brand(href="#") Lähimatkailu
                ul.nav.navbar-nav
                    li.nav-item
                        a.nav-link(href="/v1/list") List
                    li.nav-item
                        a.nav-link(href="/v1/new") Add

        .container(style="max-width:600px; margin-top:-15px; margin-bottom:50px")
            noscript
                h1 Salli JavaScript
            h2
                =name
                a.button.btn-sm.btn-danger.glyphicon.glyphicon-trash.delete(style="float:right" role="button" href="#" name=name id=id)
                a.button.btn-sm.btn-primary.glyphicon.glyphicon-edit(style="float:right; margin-right:10px" role="button" href="/v1/modify/" + id)
            table.table.table-striped.table-bordered
                tr
                    th Type 
                    td(colspan=2)= type
                tr
                    th Street address
                    td(colspan=2)= street
                tr
                    th Postal code
                    td(colspan=2)= postalCode
                tr
                    th City
                    td(colspan=2)= city
                tr
                    th Phone number
                    td(colspan=2)= phoneNumber
                tr
                    th Latitude
                    td(colspan=2)= latitude
                tr
                    th Longitude
                    td(colspan=2)= longitude
                if picture != undefined
                    tr
                        th(colspan=3) Pictures
                    each url, i in picture
                        tr
                            td(colspan=3)=url
                tr
                    th(colspan=3) Info
                tr
                    td(colspan=3)= info
                tr
                    th Open hours
                    th Starts
                    th Ends
                tr
                    th Monday
                    td= monStart
                    td= monEnd
                tr
                    th Tuesday
                    td= tueStart
                    td= tueEnd
                tr
                    th Wednesday
                    td= wedStart
                    td= wedEnd
                tr
                    th Thursday
                    td= thuStart
                    td= thuEnd
                tr
                    th Friday
                    td= friStart
                    td= friEnd
                tr
                    th Saturday
                    td= satStart
                    td= satEnd
                tr
                    th Sunday
                    td= sunStart
                    td= sunEnd
        script(src="/js/delete.js")
