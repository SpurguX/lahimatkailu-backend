      }
      button {
      background-color: #73A335;
      color: white;
      padding: 14px 20px;
      margin: 8px auto;
      border: none;
      cursor: pointer;
      width: 40%;
      border-radius: 3px;

      }
      input[type=text], input[type=password] {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      border-radius: 3px;
      }
